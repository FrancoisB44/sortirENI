{% extends 'base.html.twig' %}

{% block titlePage %}Liste des sorties{% endblock %}


{% block container %}

    <div class="row">
        <div class="col-md-12">
            <div class="row" >

                <div class=""col-md-12>

                    {{ form_start(formSearch) }}

                        {{ form_row(formSearch.textSearch) }}<br>

                        <h5>Filter par campus</h5>
                        {{ form_row(formSearch.campusSearch) }}<br>

                        <h5>Filter par état de l'événement</h5>
                        {{ form_row(formSearch.statusSearch) }}<br>

                    <h5>Début de l'événement : </h5>
                    {{ form_row(formSearch.dateStartSearch) }}<br>

                    <h5>Fin de l'événement : </h5>
                    {{ form_row(formSearch.dateEndSearch) }}<br>

                    <button type="submit" class="btn btn-primary">Rechercher</button>


                    {{ form_end(formSearch) }}

                </div>

                <div class=""col-md-12>
                <div class="col-md-3">
                </div>
                <div class="col-md-6" style="align-items: center">

{#                    {%  if app.user %}#}
{#                        <p style="text-align: center">Bienvenue {{ app.user.username }}</p>#}
{#                    {% endif %}#}

                    <h3 style="text-align: center">Liste des sorties</h3>

{#                    <ul style="list-style-type: none">#}
{#                        {% for event in listByFilters %}#}
{#                            <li><a href="{{ url('details', {"id" : event.id }) }}">{{ event.nameEvent }} ({{ event.status }}) : {{ event.campus }}</a></li>#}

{#                        {% endfor %}#}
{#                    </ul>#}

                    {% if listByFilters | length > 0 %}
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Sortie</th>
                                    <th>Débute le </th>
                                    <th>Inscription jusqu'au </th>
                                    <th>inscrits / places</th>
                                    <th>Etat </th>
                                    <th>Organisateur </th>
                                    <th>Actions </th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for event in listByFilters %}
                                    <tr>
                                        <td>{{ event.nameEvent }}</td>
                                        <td>{{ event.startDateTime|date("d/m/Y") }}</td>
                                        <td>{{ event.registrationDeadLine|date("d/m/Y") }}</td>
                                        <td>{{ event.nbRegistrationsMax }}</td>
                                        <td>{{ event.status }}</td>
                                        <td>{{ event.user }}</td>
                                        <td>
                                            <a href="{{ url('details', {"id" : event.id }) }}" class="btn btn-success btn-sm"></a>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    {% else %}
                        <p>Aucune sortie ne correspond à votre recherche </p>
                    {% endif %}


                </div>
                <div class="col-md-3">
                </div>
                </div>
            </div>
        </div>
    </div>



{% endblock %}