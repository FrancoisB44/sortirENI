<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css"
              rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6"
              crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js"
                integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf"
                crossorigin="anonymous"></script>

        <div class="container-fluid ">
            <header class="row text-light bg-success d-flex align-items-center mb-5 p-5 shadow-lg">
                <div class="col-lg-4 col-sm-12 d-flex justify-content-center">
                    <h1>
                        Sortir.com
                    </h1>
                </div>
                <div class="col-lg-4 col-sm-12 d-flex justify-content-center">
                    <h3>
                        {% block titlePage %}{% endblock %}
                    </h3>
                </div>
                <div class="col-lg-4 col-sm-12 d-flex justify-content-center">
                    <ul class="nav">
                        <li class="nav-item">
                            <a class="nav-link bg-white mx-4 my-2 rounded" href="{{ path('home') }}">Home</a>
                        </li>
                        {% if app.user %}
                            <li class="nav-item">
                                <a class="nav-link bg-white mx-4 my-2 rounded" href="#">My Profile</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link bg-white mx-4 my-2 rounded" href="{{ path('app_logout') }}">LogOut</a>
                            </li>
                        {% else %}
                            <li class="nav-item bg-white mx-4 my-2 rounded">
                                <a class="nav-link" href="{{ path('app_login') }}">Login</a>
                            </li>
                            <li class="nav-item bg-white mx-4 my-2 rounded">
                                <a class="nav-link" href="{{ path('app_register') }}">S'inscrire</a>
                            </li>
                        {% endif %}
                    </ul>
                </div>
            </header>
            <div class="row">

                {% for status, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="alert alert-{{ status }} alert-dismissible fade show" role="alert">
                            {{ message }}
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            </button>
                        </div>
                    {% endfor %}
                {% endfor %}

                <div class="col-md-2">
                </div>
                <div class="col-md-8">
                    {% block container %}{% endblock %}
                </div>
                <div class="col-md-2">
                </div>
            </div>
            <footer class="row mt-5 d-flex justify-content-center">
                <div class=" bg-success fixed-bottom col-md-12 ">
                    {% block footer %}{% endblock %}
                    <p class="text-light">123</p>
                </div>
            </footer>
        </div>




</html>
