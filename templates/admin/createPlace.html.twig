{% extends 'base.html.twig' %}

{% block titlePage %}Ajouter une ville{% endblock %}


{% block container %}
    <div class="container-fluide">
        <div class="row">
            <div class="col-md-6">
                {{ form_start(formPlace) }}
                <h3 class="ajoutlieu">Ajouter un lieu</h3>
                <div class="forme-group col-md-6 ">
                    <div class="row">
                        <div class="col-md-3"></div>
                        <div class="col-md-6">
                            <label class="champs">Lieu:</label>
                            {{ form_widget(formPlace.namePlace) }}
                        </div>
                        <div class="col-md-3"></div>
                    </div>
                    <div class="row">
                        <div class="col-md-3"></div>
                        <div class="col-md-6"><label class="champs">Rue :</label>
                            {{ form_widget(formPlace.street) }}
                        </div>
                        <div class="col-md-3"></div>
                    </div>
                    <div class="row">
                        <div class="col-md-3"></div>
                        <div class="col-md-6"><label class="champs" >Ville:</label>{{ form_widget(formPlace.nameCity) }}
                        </div>
                        <div class="col-md-3"></div>
                    </div>
                    <div class="row">
                        <div class="col-md-3"></div>
                        <div class="col-md-6"><label class="champs" >Code postale:</label>{{ form_widget(formPlace.zipCode) }}</div>
                        <div class="col-md-3"></div>
