                </div>
            </div>

            <div class="col-md-6 p-2">
                <h3 class="listelieux">Liste des Lieux</h3>
                {% if listPlace | length > 0 %}
                    <table class="table">
                        <thead>
                        <tr>
                            <th>Lieu</th>
                            <th>Code postal</th>
                            <th>Ville</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for place in listPlace %}
                            <tr>
                                <td>
                                    {{ place.namePlace }}
                                </td>
                                <td>
                                    {{ place.zipCode }}
                                </td>
                                <td>
                                    {{ place.street }}
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
