    {% extends 'base.html.twig' %}

    {% block titlePage %}Liste des sorties{% endblock %}


    {% block container %}

        <div class="row">
            <div class="col-md-12">
                <div class="row" >
                    <div class="col-md-3">
                    </div>
                    <div class="col-md-6" style="align-items: center">

                        {#                    {%  if app.user %}#}
                        {#                        <p style="text-align: center">Bienvenue {{ app.user.username }}</p>#}
                        {#                    {% endif %}#}

                        <h3 style="text-align: center">Liste des utilisateurs :</h3>
                        <table class="table">
                            <thead>

                                <th>Utilisateurs</th>
                                <th>Roles</th>
                                <th> </th>
                                <th> </th>
                            </thead>
                                {% for user in listUsers %}
                                    <tr>
                                    <td>{{ user.id }}</td>
                                    <td>{{ user }}</td>
                                    <td>
                                        {% for role in user.roles %}
                                            {{ role }}
                                        {% endfor %}
                                    </td>
                                    <td>
                                        <a href="{{ path('delete_user', {'id': user.id }) }}" class="btn btn-danger" >Supprimer</a>
                                    </td>
                                    <td>
                                        <a href="{{ path('modify_user_as_admin', {'id': user.id }) }}" class="btn btn-warning">Modifier</a>
                                    </td>
                                    </tr>
                                {% endfor %}
                        </table>
                        <button type="submit" class="btn btn-success" onclick="history.go(-1)">Retour</button>
                    </div>


                </div>
            </div>
        </div>



    {% endblock %}